<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?listItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/page_item_padding" >

    <TextView
        android:id="@+id/page_list_title"
        style="@style/TextHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/page_item_padding"
        android:layout_marginBottom="@dimen/page_item_padding"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/page_list_time"
            style="@style/TextHeaderSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true" />

        <TextView
            android:id="@+id/page_list_comment"
            style="@style/TextHeaderSub"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:singleLine="true" />
    </LinearLayout>

    <View
        android:background="@drawable/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/page_item_padding"
        android:layout_marginBottom="@dimen/page_item_padding"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/page_list_text"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/page_list_image"
            android:layout_width="@dimen/logo_size"
            android:layout_height="@dimen/logo_size"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="@dimen/logo_padding"
            android:contentDescription="@null" />
    </LinearLayout>

</LinearLayout>