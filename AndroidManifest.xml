<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cheng.app.cnbeta"
    android:versionCode="10"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PageListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PageDetailActivity"
            android:label="@string/title_page_detail"
            android:windowSoftInputMode="adjustUnspecified|stateAlwaysHidden"
            android:parentActivityName=".PageListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PageListActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/action_settings"
            android:theme="@style/Theme.AppCompat"
            android:parentActivityName=".PageListActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".PageListActivity" />
        </activity>
        <provider
            android:name=".data.CBProvider"
            android:authorities="cheng.app.cnbeta"
            android:label="@string/app_name" />
    </application>

</manifest>
