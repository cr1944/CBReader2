<cheng.app.cnbeta.lib.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/page_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/page_detail_comments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/windowBackground"
        android:showDividers="middle"
        android:divider="?android:dividerHorizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/page_detail_comments_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/slidingup_panel_height"
            android:gravity="center"
            android:text="@string/display_cmt"
            android:background="@color/base_bg_dark"
            android:textColor="@android:color/primary_text_dark"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <include layout="@layout/cmt_list_layout" />
    </LinearLayout>

</cheng.app.cnbeta.lib.SlidingUpPanelLayout>