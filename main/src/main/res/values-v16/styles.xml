<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextHeader">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:maxLines">@integer/text_header_max_lines</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="ActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
