<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <style name="AppBaseTheme.Dark" parent="Theme.AppCompat">
    </style>
    
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@drawable/grey_background_pattern</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="listItemBackground">@drawable/grey_frame</item>
        <item name="baseBackground">@color/base_bg</item>
        <item name="listItemDivider">@drawable/divider</item>
    </style>

    <style name="AppTheme.Dark" parent="AppBaseTheme.Dark">
        <item name="android:windowBackground">@drawable/dark_background_pattern</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="listItemBackground">@drawable/dark_frame</item>
        <item name="baseBackground">@color/base_bg_dark</item>
        <item name="listItemDivider">@drawable/divider_dark</item>
    </style>

    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="backgroundStacked">@drawable/dark_background_pattern</item>
        <item name="android:background">@drawable/ab_solid_adia</item>
        <item name="background">@drawable/ab_solid_adia</item>
        <item name="titleTextStyle">@style/ActionBarTitle</item>
    </style>

    <style name="ActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextHeader">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:maxLines">@integer/text_header_max_lines</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextHeaderSub">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="HomePaneHeader">
       <item name="android:textSize">@dimen/text_size_medium</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>
